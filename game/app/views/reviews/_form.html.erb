        <%= f.label :reviewtext%>
        <%= f.text_area :reviewtext, size: "150x10", class: 'textarea'%>
      </div>
      <br>
      <div class="field">
        <%= f.label :rating%>
        <%= f.number_field :rating, in: 1...11, class: 'textbox'%>
