<%= form_for([@vgame, @review]) do |f| %>
  <%if @review.errors.any?%>
        <div id = "error_explanation">
        <h2>%= pluralize(@tag.errors.count, "error") %> prohibited this review from being saved:</h2>
        <ul>
          <% @review.errors.full_messages.each do |message| %>
